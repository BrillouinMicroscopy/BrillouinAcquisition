      $(OPENCV_DIR)\include;
      $(QTDIR)\include;
      $(EXTERNAL_GSL_DIR)\include;
      $(GENERATED_FILES_DIR);
      $(GENERATED_FILES_DIR)\$(ConfigurationName);
    </ThirdPartyIncludes>

    <ThirdPartyLibDirs>
      $(NI_EXTCOMPILER_DIR)\lib64\msvc;
      $(HDF5_DIR)\lib;
      $(THORLABS_DIR);
      $(POINT_GREY_DIR)\lib64\vs2015;
      $(IDS_UEYE_DIR)\Lib;
      $(PHOTOMETRICS_PVCAM_DIR)\Lib\amd64;
      $(OPENCV_DIR)\x64\vc16\lib;
