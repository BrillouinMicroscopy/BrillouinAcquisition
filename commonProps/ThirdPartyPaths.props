  <!-- Common paths for both Debug and Release -->
  <PropertyGroup>
    <ThirdPartyIncludes>
      .;
      $(THORLABS_DIR);
      $(NI_EXTCOMPILER_DIR)\include;
      $(IDS_UEYE_DIR)\include;
      $(POINT_GREY_DIR)\include;
