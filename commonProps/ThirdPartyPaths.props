  </PropertyGroup>

  <!-- Differences specific to Debug build -->
  <PropertyGroup Condition="'$(Configuration)'=='Debug' and '$(Platform)'=='x64'">
    <ThirdPartyIncludes>
      $(ThirdPartyIncludes);
    </ThirdPartyIncludes>

    <ThirdPartyLibs>
